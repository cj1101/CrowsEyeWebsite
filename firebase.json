{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/marketing-tool/posts",
        "function": "marketingPosts"
      },
      {
        "source": "/api/marketing-tool/stats", 
        "function": "marketingStats"
      },
      {
        "source": "/api/marketing-tool/media",
        "function": "marketingMedia"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
} 