{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "site": "crows-eye",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/_next/**",
          "function": "nextjsFunc2"
        },
        {
          "source": "**",
          "function": "nextjsFunc2"
        }
      ]
    },
    {
      "site": "crows-eye-website",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/_next/**",
          "function": "nextjsFunc2"
        },
        {
          "source": "**",
          "function": "nextjsFunc2"
        }
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  }
}
